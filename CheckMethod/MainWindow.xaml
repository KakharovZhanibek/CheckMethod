<Window x:Class="CheckMethod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckMethod"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="800" Background="DarkCyan">

    <StackPanel x:Name="spMain" >
        <Border Margin="20" HorizontalAlignment="Center" BorderThickness="1" BorderBrush="Blue" Background="AliceBlue" Opacity="0.9">
            <StackPanel x:Name="secondSp">
                <WrapPanel Margin="20" HorizontalAlignment="Center">
                    <Label FontSize="15" Content="Количество экспериментов" RenderTransformOrigin="0.523,0.622"></Label>
                    <TextBox x:Name="tbxCount" Height="20" Width="70"></TextBox>
                    <Button Margin="10" x:Name="ConfirmCount_Btn" Height="20" Content="Ok" Click="NecessarilyCountOfTextBoxes" IsDefault="True"></Button>
                </WrapPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
